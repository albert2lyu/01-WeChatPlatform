{% extends "_html.twig" %}

{% block title %}文章数据{% endblock %}

{% block body %}
	<div class="data-page">
		<article class="weui_article">
			<h1 class="page_title">谷歌人工智能专家：不排除出现天网的可能性</h1>
			<section class="article-info">
				<span class="article-date">2016-02-08</span>
				<span class="article-writor">作者：李四</span>
				<br>
        <span class="article-source">原文出处：新浪科技</span>
        <span class="article-platform">转载自：知乎</span>
			</section>
			<section class="article-data">
				<div id="read-count" style="width: 100%; height: 130%;"></div>
        <div id="like-count" style="width: 100%; height: 130%;"></div>
			</section>
		</article>

		{# 返回文章 #}
		<div class="btn-container">
			<a href="javascript:;" class="weui_btn weui_btn_primary">返回文章</a>
		</div>
	</div>
{% endblock %}

{% block defaultScript %}
  <script type="text/javascript" src="{{ path }}/web/src/js/zepto.js"></script>
{% endblock %}
{% block Script %}
	<script type="text/javascript" src="{{ path }}/web/src/js/echarts.min.js"></script>
	<script type="text/javascript" src="{{ path }}/web/src/js/macarons.js"></script>

	<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var read = echarts.init(document.getElementById('read-count'), 'macarons');
    var like = echarts.init(document.getElementById('like-count'), 'macarons');

    // 阅读数 的配置项和数据
    var readOption = {
      tooltip: {
	      trigger: 'axis'
      },
      grid: {
      	left: '0',
      	top: '10%',
        containLabel: true
      },
      xAxis: [
        {
          type: 'value',
            boundaryGap : [0, 0.001]
        }
      ],
      yAxis: [
        {
            type: 'category',
            data: ['阅读数']
        }
      ],
      series: [
        {
            name: '次数',
            type: 'bar',
            itemStyle: {
            	normal: {
            		color: '#3cc51f'
            	},
            	emphasis: {
            		color: '#2B8C17'
            	}
            },
            data: [2367]
        }
      ]
    };

        // 点赞数 的配置项和数据
        var likeOption = {
          tooltip: {
            trigger: 'axis'
          },
          grid: {
            left: '0',
            top: '10%',
            containLabel: true
          },
          xAxis: [
            {
              type: 'value',
                boundaryGap : [0, 0.001]
            }
          ],
          yAxis: [
            {
                type: 'category',
                data: ['点赞数']
            }
          ],
          series: [
            {
                name: '次数',
                type: 'bar',
                itemStyle: {
                  normal: {
                    color: '#3cc51f'
                  },
                  emphasis: {
                    color: '#2B8C17'
                  }
                },
                data: [45]
            }
          ]
        };

    // 使用刚指定的配置项和数据显示图表。
    read.setOption(readOption);
    like.setOption(likeOption);
  </script>

{% endblock %}
