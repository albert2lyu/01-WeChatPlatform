{% extends "_html.twig" %}

{% block title %}录入文章{% endblock %}

{% block Stylesheet %}
	<link rel="stylesheet" href="./web/src/css/wangEditor-mobile.min.css">
{% endblock %}

{% block body %}
	<div class="edit-container">
		
    <textarea id="edit-article">
    	<h1 class="article-title">标题</h1>
      <p class="article-content">正文...</p>
    </textarea>

    <div class="edit-footer-space"></div>


    <div class="edit-info">
      <form>
      <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">作者</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input id="author" name="author" class="weui_input" type="text" placeholder="请输入文章作者">
          </div>
        </div>

        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">原文出处</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input id="source" name="source" class="weui_input" type="text" placeholder="请输入文章来源">
          </div>
        </div>

        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">转载平台</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input id="platform" name="platform" class="weui_input" type="text" placeholder="请输入转载平台">
          </div>
        </div>

        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">默认点赞数</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input id='like-num' name="like-num" class="weui_input" type="number" placeholder="请输入点赞数">
          </div>
        </div>

  	    <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">默认阅读数</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input id="read-num" name="read-num" class="weui_input" type="number" placeholder="请输入文章阅读次数">
          </div>
        </div>
      </div>
      </form>
      <div class="page-container btn-group">
        <a id="save" href="javascript:;" class="weui_btn weui_btn_mini weui_btn_plain_default">保存草稿</a>
        <a id="publish" type="submit" href="javascript:;" class="weui_btn weui_btn_mini weui_btn_plain_primary">发布文章</a>
      </div>
    </div>

  </div>
{% endblock %}

{% block defaultScript %}{% endblock %}
{% block Script %}
	<script type="text/javascript" src="{{ path }}/web/src/js/zepto.js"></script>
	<script type="text/javascript" src="{{ path }}/web/src/js/zepto.touch.js"></script>
	<script type="text/javascript" src="{{ path }}/web/src/js/wangEditor-mobile.min.js"></script>
  <script type="text/javascript" src="{{ path }}/web/src/js/index.js"></script>
{% endblock %}
